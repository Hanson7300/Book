<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/name_editText"
            style="@style/EditText_text"
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:hint="@string/name_required"
            tools:layout_conversion_absoluteX="20dp"
            tools:layout_conversion_absoluteY="11dp"
            tools:layout_conversion_absoluteWidth="344dp"
            tools:layout_conversion_absoluteHeight="42dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            android:layout_marginBottom="9dp"
            app:layout_constraintBottom_toTopOf="@+id/author_editText"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" />


        <EditText
            android:id="@+id/author_editText"
            style="@style/EditText_text"
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:hint="@string/author"
            tools:layout_conversion_absoluteHeight="42dp"
            tools:layout_conversion_absoluteWidth="344dp"
            tools:layout_conversion_absoluteX="20dp"
            tools:layout_conversion_absoluteY="65dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/name_editText"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginBottom="14dp"
            app:layout_constraintBottom_toTopOf="@+id/press_editText" />


        <EditText
            android:id="@+id/press_editText"
            style="@style/EditText_text"
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:hint="@string/press"
            tools:layout_conversion_absoluteX="20dp"
            tools:layout_conversion_absoluteY="119dp"
            tools:layout_conversion_absoluteWidth="344dp"
            tools:layout_conversion_absoluteHeight="42dp"
            tools:layout_editor_absoluteY="115dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/author_editText"
            app:layout_constraintHorizontal_bias="1.0" />


        <EditText
            android:id="@+id/price_editText"
            style="@style/EditText_price"
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:hint="@string/price_required"
            tools:layout_conversion_absoluteX="20dp"
            tools:layout_conversion_absoluteY="173dp"
            tools:layout_conversion_absoluteWidth="344dp"
            tools:layout_conversion_absoluteHeight="42dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/press_editText"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/press_editText"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/amount_editText"
            app:layout_constraintVertical_bias="0.2" />


        <EditText
            android:id="@+id/amount_editText"
            style="@style/EditText_number"
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:hint="@string/amount_required"
            tools:layout_conversion_absoluteX="20dp"
            tools:layout_conversion_absoluteY="227dp"
            tools:layout_conversion_absoluteWidth="344dp"
            tools:layout_conversion_absoluteHeight="42dp"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/price_editText"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginBottom="14dp"
            app:layout_constraintBottom_toTopOf="@+id/sell_one" />


        <EditText
            android:id="@+id/sales_editText"
            style="@style/EditText_number"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="@string/sales"
            tools:layout_conversion_absoluteX="20dp"
            tools:layout_conversion_absoluteY="281dp"
            tools:layout_conversion_absoluteWidth="150dp"
            tools:layout_conversion_absoluteHeight="42dp"
            tools:layout_editor_absoluteY="280dp"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/amount_editText"
            app:layout_constraintRight_toLeftOf="@+id/sell_one"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.0" />

        <Button
            android:id="@+id/sell_one"
            style="@style/button_style"
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:text="@string/sell_one_book"
            tools:layout_conversion_absoluteX="274dp"
            tools:layout_conversion_absoluteY="282dp"
            tools:layout_conversion_absoluteWidth="90dp"
            tools:layout_conversion_absoluteHeight="30dp"
            tools:layout_editor_absoluteY="277dp"
            android:layout_marginRight="-8dp"
            app:layout_constraintRight_toRightOf="@+id/amount_editText" />


        <ImageView
            android:id="@+id/image_editor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="descripionn"
            android:maxHeight="150dp"
            android:maxWidth="150dp"
            android:scaleType="centerInside"
            tools:src="@drawable/bookshelf"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/sell_one" />
    </android.support.constraint.ConstraintLayout>

</android.support.design.widget.CoordinatorLayout>